<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mohamedmabrouk.patienttacker">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic5"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".FisrtActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientPagerAtivity"
            android:label="Add Patient"
            android:parentActivityName=".PatientListActivity" />
        <activity android:name=".PatientActivity" />
        <activity android:name=".PatientListActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="Search"
            android:parentActivityName=".PatientListActivity"></activity>
        <activity
            android:name=".SearchListActivity"
            android:label="Search Result"
            android:parentActivityName=".PatientListActivity" />
    </application>


</manifest>
