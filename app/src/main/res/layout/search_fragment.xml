<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6f839a"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/name_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:background="@color/whiteColor"
                android:hint="Patient Name"
                android:padding="20dp"
                android:textColor="@color/input_login" />

            <Button
                android:id="@+id/arrival_time_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/mybtn3"
                android:hint="Arrival Time From "
                android:padding="20dp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor" />

            <Button
                android:id="@+id/arrival_time_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/mybtn3"
                android:hint="Arrival Time To"
                android:padding="20dp"
                android:textColor="@color/whiteColor"
                android:textColorHint="@color/whiteColor" />

            <EditText
                android:id="@+id/disease_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/whiteColor"
                android:hint="@string/Disease_txt_hint"
                android:padding="20dp"
                android:textColor="@color/input_login" />

            <EditText
                android:id="@+id/medical_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/whiteColor"
                android:hint="@string/Medication_txt_hint"
                android:padding="20dp"
                android:textColor="@color/input_login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/mybtn3"
                    android:padding="20dp"
                    android:text="Search"
                    android:textColor="@color/whiteColor" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mybtn3"
                    android:padding="20dp"
                    android:text="Clear"
                    android:textColor="@color/whiteColor" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
